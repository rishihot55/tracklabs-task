<div ng-controller='placesController'>
	<h1 class='text-center'>Add Location</h1>
	<div class='row'>
		<div class='col-md-6 col-md-offset-3'>
			<div class='form-group'>
				<input type='text' class='form-control' id='address' placeholder='Search an existing location' ng-model="address" ng-enter="trackLocation(address)">
			</div>
		</div>
	</div>
	<div class='row'>
		<div class='col-md-8 col-md-offset-2'>
			<div id='map-canvas' style='width: 100%; height: 50vh'></div>
		</div>
	</div>
	<div class='row' id='info-box' ng-show="place_loaded == true" ng-model="place">
		<div class='row'>
			<div class='col-md-6 col-md-offset-3'>
				<h3 class='text-center'>Place Information</h3>
				<form>
					<h4>Name: <span ng-bind="place.name"></span></h4>
					<h4>Address: <span ng-bind="place.address"></span></h4>
					<div class="text-center">
						<button type="submit" class='btn btn-lg btn-success'>Add to My Places</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>